<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appName"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/login_tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/stylish_regular"
        android:text="PAPRINGAN"
        android:textColor="@color/green_dark"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/login_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:fontFamily="@font/inter_bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/login_tvAppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="56dp"/>

    <TextView
        android:id="@+id/login_lUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/login_tvTitle"
        android:layout_marginHorizontal="36dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:layout_marginTop="28dp"/>
    <EditText
        android:id="@+id/login_etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_grey"
        app:layout_constraintTop_toBottomOf="@id/login_lUsername"
        android:paddingVertical="12dp"
        android:paddingHorizontal="12dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="12dp"/>

    <TextView
        android:id="@+id/login_lPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/login_etUsername"
        android:layout_marginHorizontal="36dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:layout_marginTop="28dp"/>
    <EditText
        android:id="@+id/login_etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_grey"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/login_lPassword"
        android:paddingVertical="12dp"
        android:paddingHorizontal="12dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="12dp"/>
    <android.widget.Button
        android:id="@+id/login_btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@drawable/rounded_green"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_etPassword"
        />

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/login_btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? "
            android:textColor="@color/black"
            android:fontFamily="@font/inter_medium"
            />
        <TextView
            android:id="@+id/login_tvCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=" Create"
            android:fontFamily="@font/inter_bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>