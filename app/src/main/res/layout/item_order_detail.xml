<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/checkout_containerProduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginVertical="8dp">

    <ImageView
        android:id="@+id/ivOrderItemImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/kapur"
        app:layout_constraintTop_toBottomOf="@id/checkout_tvTitle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/cart_ivCartItemImage"
        app:layout_constraintTop_toBottomOf="@id/checkout_tvTitle"
        app:layout_constraintTop_toTopOf="@id/cart_ivCartItemImage">

        <TextView
            android:id="@+id/tvOrderItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antic_regular"
            android:text="Kapur Pertanian"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@id/cart_ivCartItemImage"
            app:layout_constraintTop_toTopOf="@id/cart_ivCartItemImage" />

        <TextView
            android:id="@+id/tvOrderItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/antic_regular"
            android:text="Rp15.000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvOrderItemQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/antic_regular"
            android:text="1 buah"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>