<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <TextView
        android:id="@+id/register_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:fontFamily="@font/inter_bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@+id/register_lUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/register_tvTitle"
        android:layout_marginHorizontal="36dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/register_etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_grey"
        app:layout_constraintTop_toBottomOf="@id/register_lUsername"
        android:paddingVertical="12dp"
        android:paddingHorizontal="12dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="12dp"/>

    <TextView
        android:id="@+id/register_lName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/register_etUsername"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/register_etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_grey"
        app:layout_constraintTop_toBottomOf="@id/register_lName"
        android:paddingVertical="12dp"
        android:paddingHorizontal="12dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="12dp"/>

    <TextView
        android:id="@+id/register_lEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/register_etName"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/register_etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_grey"
        app:layout_constraintTop_toBottomOf="@id/register_lEmail"
        android:paddingVertical="12dp"
        android:paddingHorizontal="12dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="12dp"/>

    <TextView
        android:id="@+id/register_lPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/register_etEmail"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/register_etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_grey"
        app:layout_constraintTop_toBottomOf="@id/register_lPassword"
        android:inputType="textPassword"
        android:paddingVertical="12dp"
        android:paddingHorizontal="12dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="12dp"/>

    <TextView
        android:id="@+id/register_lConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/register_etPassword"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/register_etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_grey"
        app:layout_constraintTop_toBottomOf="@id/register_lConfirmPassword"
        android:paddingVertical="12dp"
        android:paddingHorizontal="12dp"
        android:inputType="textPassword"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="12dp"/>

    <android.widget.Button
        android:id="@+id/register_btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="@drawable/rounded_green"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_etConfirmPassword"
        />

</androidx.constraintlayout.widget.ConstraintLayout>